!a010_WindowDown1
    window mousepos Xpos Ypos
    PaintObjectAction = 'n'
    file PaintFile error open PaintFile null
    b
    do
        if  (!eof)
+           call !a010_WindowDown1_paintfile
+       endif
        f;1
    until (eof)
    if  (!MouseOK) return
    Drag = 'y'
